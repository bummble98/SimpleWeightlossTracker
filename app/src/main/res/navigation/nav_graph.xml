<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.zybooks.simpleweightlosstracker.viewmodel.MainFragment"
        android:label="Home Screen"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/WeightEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/WeightEntryFragment"
        android:name="com.zybooks.simpleweightlosstracker.viewmodel.WeightEntryFragment"
        android:label="Add Weight Screen"
        tools:layout="@layout/fragment_weight_entry">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/MainFragment" />
    </fragment>
</navigation>